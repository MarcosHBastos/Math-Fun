<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CountActivity">

    <TextView
            android:id="@+id/tll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="Teste teste teste teste teste teste"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="25dp"/>

    <TextView
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Teste teste teste teste teste teste"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>

    <ImageView
            android:id="@+id/imgView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/sub"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/black"
            app:srcCompat="@mipmap/ic_launcher"/>

    <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/imgView"
            android:layout_alignBaseline="@id/btn2"
            android:onClick="answer1"
            android:textColor="@android:color/black"
            android:text="1"/>

    <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgView"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:onClick="answer2"
            android:textColor="@android:color/black"
            android:text="2"/>

    <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/btn2"
            android:layout_toEndOf="@id/imgView"
            android:onClick="answer3"
            android:textColor="@android:color/black"
            android:text="3"/>

    <TextView
            android:id="@+id/hits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn2"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:text="acertos"/>

</RelativeLayout>
